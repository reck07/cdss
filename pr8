%{
#include <stdio.h>
int identifier_count = 0;
%}
%%
[a-zA-Z][a-zA-Z0-9]* { identifier_count++; }
.
\n
%%
int main() {
FILE *file;
file = fopen("sample8.txt", "r");
if (!file) {
printf("Error: could not open file 'sample8.txt'\n");
return 1;
}
yyin = file;
yylex();
fclose(file);
printf("Number of identifiers: %d\n", identifier_count);
return 0;
}
int yywrap() {
return 1;
}
#gedit sample8.txt
a=1
b=2
c=3
